{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "global.d.ts", "declarations.d.ts"],
  "exclude": ["./node_modules"]
}
